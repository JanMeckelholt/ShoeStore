<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        style="@style/cv_style"
        app:cardCornerRadius="@dimen/cv_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cv_padding"
        tools:context=".screens.instructions.InstructionsScreen">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/instructions_headline"
            android:textSize="@dimen/textSizeHeadline"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/instructions_body"
            android:textSize="@dimen/textSizeValue" />

        <Button
            android:id="@+id/btnToShoeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/btn_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/btn_to_shoe_list" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>