<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Layout is very simple and flat and therefore justifies the use of LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".screens.shoelisting.ShoeListingScreen">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvShoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnToShoeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginHorizontal="@dimen/btn_margin"
                android:layout_margin="@dimen/standard_margin"
                android:src="@drawable/baseline_add_24" />

        </LinearLayout>
    </ScrollView>
</layout>

